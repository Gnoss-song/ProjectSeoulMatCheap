<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/my_01_03_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="03.25 안내"
        android:textSize="24dp"

        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:drawableRight="@drawable/btn_nexticon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_01_03_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="안내"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/my_01_03_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="2021-03-25"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/my_01_03_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="안녕ㅎ세요 서울맛칩입니다. 많은 "
        android:visibility="gone" />

</LinearLayout>