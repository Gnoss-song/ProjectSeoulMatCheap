                    android:text="@string/review_further"
                    android:textColor="@color/main"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_arrow"
                    app:iconGravity="end"
                    app:iconSize="@dimen/inform_review_icon" />

            </LinearLayout>

            <LinearLayout
