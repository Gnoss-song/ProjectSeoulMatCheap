                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="@dimen/inform_icon_width"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_basic"
                            app:srcCompat="@drawable/ic_like" />

