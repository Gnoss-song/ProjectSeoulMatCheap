                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_basic"
                    android:paddingTop="@dimen/margin_basic"
                    android:text="@string/item_menu_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_filter_title"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_basic4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_basic"
                        android:layout_marginTop="@dimen/margin_height"
                        android:layout_marginEnd="@dimen/margin_basic">

                        <TextView
                            android:id="@+id/menu_name20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_basic"
                            android:text="등심돈까스" />

                        <View
                            android:id="@+id/view20"
                            android:layout_width="wrap_content"
                            android:layout_height="4dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/dot_line" />

                        <TextView
                            android:id="@+id/menu_cost20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_basic"
                            android:text="7000" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_height"
                            android:text="원" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_basic"
                        android:layout_marginTop="@dimen/margin_height"
                        android:layout_marginEnd="@dimen/margin_basic">

                        <TextView
                            android:id="@+id/menu_name22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
