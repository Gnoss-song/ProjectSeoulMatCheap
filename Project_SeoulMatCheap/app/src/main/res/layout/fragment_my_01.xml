<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BEF6F3F3"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/main">

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="마이페이지"
            android:textColor="@color/white_93"
            android:textSize="24sp">

        </TextView>

    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:id="@+id/linearlayout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:backgroundTint="#DCD6D6"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="10dp"
            android:paddingBottom="0dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/btn_bg" />
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/linenarlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_toEndOf="@+id/cardview"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nickName"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1"
                            android:text="@string/nickname"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/emailAddress"
                            android:layout_width="140dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/email"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_rank"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@id/linenarlayout"
                        android:src="@drawable/btn_medal" />

                    <TextView
                        android:id="@+id/level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_toEndOf="@+id/img_rank"
                        android:text="@string/level"
                        android:textAlignment="textStart"
                        android:textSize="11dp" />

                    <ImageView
                        android:id="@+id/btn_help"
                        android:layout_width="25dp"
                        android:layout_height="33dp"
                        android:layout_below="@id/level"
                        android:layout_toEndOf="@+id/img_rank"
                        android:src="@drawable/ic_helpbtn" />


                    <Button
                        android:id="@+id/btn_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/img_rank"
                        android:layout_alignStart="@+id/img_rank"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_logout" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="5dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="430dp"
                    android:layout_marginTop="0dp"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">

                    <Button
                        android:id="@+id/btn_favorite"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/custom_button_my_01"
                        android:drawableLeft="@drawable/btn_homeaddress"


                        android:drawableRight="@drawable/btn_nexticon"
                        android:stateListAnimator="@null"


                        android:text="찜 목록"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"

                        app:backgroundTint="@null" />

                    <Button
                        android:id="@+id/btn_myreview"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/custom_button_my_01"
                        android:drawableLeft="@drawable/btn_homeaddress"

                        android:drawableRight="@drawable/btn_nexticon"
                        android:stateListAnimator="@null"

                        android:text="마이리뷰"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"

                        app:backgroundTint="@null" />

                    <Button
                        android:id="@+id/btn_myreport"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/custom_button_my_01"

                        android:drawableLeft="@drawable/btn_homeaddress"
                        android:drawableRight="@drawable/btn_nexticon"

                        android:stateListAnimator="@null"

                        android:text="내 제보 글 관리"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"

                        app:backgroundTint="@null" />

                    <Button
                        android:id="@+id/btn_notice"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/custom_button_my_01"
                        android:drawableLeft="@drawable/btn_homeaddress"
                        android:drawableRight="@drawable/btn_nexticon"

                        android:stateListAnimator="@null"

                        android:text="공지사항"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"

                        app:backgroundTint="@null" />

                    <Button
                        android:id="@+id/btn_report"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/custom_button_my_01"
                        android:drawableLeft="@drawable/btn_homeaddress"
                        android:drawableRight="@drawable/btn_nexticon"
                        android:stateListAnimator="@null"

                        android:text="건의하기"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"

                        app:backgroundTint="@null" />

                    <Button
                        android:id="@+id/btn_version"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        android:background="@drawable/custom_button_my_01"
                        android:drawableLeft="@drawable/btn_homeaddress"
                        android:drawableRight="@drawable/btn_nexticon"

                        android:text="앱 버전"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"

                        app:backgroundTint="@null" />


                    <Button
                        android:id="@+id/btn_withdrawal"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="230dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/btn_withdrawal" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <FrameLayout
                android:id="@+id/help_Container"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearlayout"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="#00ff0000">

                <Button
                    android:id="@+id/btn_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00ff0000"
                    android:gravity="center"
                    android:text="@string/service_manual"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="9sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/my_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</RelativeLayout>

